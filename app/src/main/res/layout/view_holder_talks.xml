<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_medium"
    android:clickable="true"
    android:elevation="@dimen/elevation_card"
    android:foreground="@drawable/ripple"
    app:cardCornerRadius="@dimen/cornor_radius_card">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_card_view">

        <ImageView
            android:id="@+id/iv_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ted_talks3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_medium_2"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium">

            <TextView
                android:id="@+id/tv_speaker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_title"
                android:text="Corvo Attano"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_regular_2x" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Traits of a Psychopath"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_regular_3x"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="13:27"
                android:textColor="@color/secondary_text" />

            <ImageButton
                android:id="@+id/imgbtn_context_menu_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_time"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@null"
                android:src="@drawable/ic_context_menu_large" />
        </RelativeLayout>

    </FrameLayout>


</android.support.v7.widget.CardView>